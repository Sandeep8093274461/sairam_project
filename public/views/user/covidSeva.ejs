<%- include('common/header.ejs') -%>
<style>
    .form-control {
        max-width: 400px;
    }

    .row {
        margin-bottom: 10px;
    }
</style>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"><img src="/img/icon/logo.jpg" style="width:60px;height:60px;" alt="">
                        Covid-19 Relief Service</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Service</li>
                        <li class="breadcrumb-item active">Add Details</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">


        <div class="container-fluid">
            <div class="container-fluid">
                <div class="panel panel-default">
                    <form name="bloodCamp" id="bloodCamp">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Covid-19 Relief Service</h3>
                            </div>
                            <div class="card-body">

                                <div class="row">
                                    <div class="col-5" style="text-align:right">
                                        <label>Date<span class="star">*</span> :</label>
                                    </div>
                                    <div class="col-7">
                                        <input type="date" name="date" id="date" ng-model="date" class="form-control">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-5" style="text-align:right">
                                        <label>District<span class="star">*</span> :</label>
                                    </div>
                                    <div class="col-7">
                                        <select name="dist" id="dist" ng-model="dist" class="form-control"
                                            ng-required="true" ng-change="loadSamithiList()">
                                            <option value="">--Select District--</option>
                                            <option ng-repeat="option in districtList" value="{{option.district_id}}">
                                                {{option.name}}</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-5" style="text-align:right">
                                        <label>Seva Samithi<span class="star">*</span> :</label>
                                    </div>
                                    <div class="col-7">
                                        <select ng-model="SevaSamithi" class="form-control" ng-required="true">
                                            <option value="">--Select Samithi--</option>
                                            <option ng-repeat="option in samithiList" value="{{option.name}}">
                                                {{option.name}}</option>
                                        </select>

                                    </div>
                                </div>




                                <div class="row">
                                    <div class="col-5" style="text-align:right">
                                        <label>Location<span class="star">*</span> :</label>
                                    </div>
                                    <div class="col-7">
                                        <textarea class="form-control" rows="2" id="Address" ng-model="Address"
                                            ng-required="true"></textarea>
                                    </div>
                                </div>




                                <div class="row">
                                    <div class="col-5" style="text-align:right">
                                        <label>No.of Food Packets<span class="star">*</span> :</label>
                                    </div>
                                    <div class="col-7">
                                        <input type="number" id="nfp" class="form-control"
                                            placeholder="No.of Food Packets" maxlength="200" ng-model="nfp"
                                            ng-required="true">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-5" style="text-align:right">
                                        <label>No.of Amrutha Kalasams.<span class="star">*</span> :</label>
                                    </div>
                                    <div class="col-7">
                                        <input type="number" id="nak" class="form-control"
                                            placeholder="No.of Amrutha Kalasams" maxlength="200" ng-model="nak"
                                            ng-required="true">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-5" style="text-align:right">
                                        <label>Other Items (if any )<span class="star">*</span> :</label>
                                    </div>
                                    <div class="col-7">
                                        <input type="number" id="othitems" class="form-control"
                                            placeholder="Other Items (if any )" maxlength="200" ng-model="othitems"
                                            ng-required="true">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-5" style="text-align:right">
                                        <label>Brief Details of the Seva<span class="star">*</span> :</label>
                                    </div>
                                    <div class="col-7">
                                        <textarea cols="30" rows="4" id="bdos" class="form-control"
                                            placeholder="Brief Details of the Seva" maxlength="200" ng-model="bdos"
                                            ng-required="true"></textarea>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-5" style="text-align:right">
                                        <label>No of Sevadals involved<span class="star">*</span> :</label>
                                    </div>
                                    <div class="col-7">
                                        <input type="number" id="nsi" class="form-control"
                                            placeholder="Brief Details of the Seva" maxlength="200" ng-model="nsi"
                                            ng-required="true">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-5" style="text-align:right">
                                        <label>Approximate Cost incurred<span class="star">*</span> :</label>
                                    </div>
                                    <div class="col-7">
                                        <input type="number" id="aci" class="form-control"
                                            placeholder="Approximate Cost incurred" maxlength="200" ng-model="aci"
                                            ng-required="true">
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-5" style="text-align:right">
                                        <label>Photographs during Seva<span class="star">*</span> :</label>
                                    </div>
                                    <div class="col-5">
                                        <input type="file" class="form-control" name="idp" id="idp"
                                            multiple='multiple' />
                                    </div>
                                    <div class="col-md-2" ng-show="showIdpError">
                                        <span style="color: red;">{{idpFileGood}}</span>
                                    </div>
                                    <div class="col-md-1">
                                        <span id="linkDWN"></span>
                                    </div>
                                </div>



                                <div class="row" style="padding-top:4px">
                                    <div class="col-3" style="text-align:right"></div>
                                    <div class="col-2" style="text-align:right">
                                    </div>
                                    <div class="col-4">
                                        <!-- <button type="button" class="btn btn-success" data-dismiss="modal" ng-click="updateData()" id="update">UPDATE</button> -->
                                        <button type="button" class="btn btn-success" data-dismiss="modal"
                                            ng-click="addData()" id="add">ADD</button>
                                        <input type="text" id="convId" ng-hide="true" class="form-control"
                                            placeholder="convId" maxlength="200" ng-model="convId">
                                    </div>
                                    <div class="col-3" style="text-align:right"></div>

                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<footer class="main-footer">

    <div class="float-right d-none d-sm-inline-block">
        <b>Version</b> 1.0.0-pre
    </div>
</footer>

<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
</aside>
<!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->
<!-- Controller -->
<script src="/controller/user/covidSeva.js"></script>
<!-- AdminLTE App -->
<script src="/AdminLTE/adminlte.js"></script>
<script type="text/javascript" src="/AdminLTE/bootstrap.bundle.min.js"></script>

</body>

</html>