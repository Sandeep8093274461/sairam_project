<%- include('common/header.ejs') -%>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"><img src="/img/icon/blood.png" style="width:60px;height:60px;" alt="">Add Camp Details</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Blood Group</li>
                        <li class="breadcrumb-item active">Add Camp</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">


        <div class="container-fluid">
            <div class="container-fluid">
                <div class="panel panel-default">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Camp Details Entry</h3>
                            </div>
                            <form name="valid1" id="valid1">
                                <div class="card-body">
                                    <div class="row" style="padding-top:4px">
                                        <div class="col-3" style="text-align:right"></div>
                                        <div class="col-2" style="text-align:right">
                                            <label>District<span class="star">*</span> :</label>
                                        </div>
                                        <div class="col-4">
                                            <select name="dist" id="dist" ng-model="dist" class="form-control" ng-required="true">
                                                <option value="">--Select District--</option>
                                                <option ng-repeat="option in districtList" value="{{option.name}}">{{option.name}}</option>
                                            </select>
    
                                        </div>
                                        <div class="col-3" style="text-align:right"></div>
                                    </div>
                                    <div class="row" style="padding-top:4px">
                                        <div class="col-3" style="text-align:right"></div>
                                        <div class="col-2" style="text-align:right">
                                            <label>Place<span class="star">*</span> :</label>
                                        </div>
                                        <div class="col-4">
                                            <input type="text" id="cmpPlace" ng-model="cmpPlace" class="form-control" placeholder="Enter Place" maxlength="200" ng-required="true">
                                        </div>
                                        <div class="col-3" style="text-align:right"></div>
                                    </div>
                                   
    
    
                                    <div class="row" style="padding-top:4px">
                                        <div class="col-3" style="text-align:right"></div>
                                        <div class="col-2" style="text-align:right">
                                            <label>Address<span class="star">*</span> :</label>
                                        </div>
                                        <div class="col-4">
                                            <textarea class="form-control" rows="2" id="cmpAddress" ng-model="cmpAddress" ng-required="true"></textarea>
                                        </div>
                                        <div class="col-3" style="text-align:right"></div>
                                    </div>
    
                                    <div class="row" style="padding-top:4px">
                                        <div class="col-3" style="text-align:right"></div>
                                        <div class="col-2" style="text-align:right">
                                            <label>Camp's from<span class="star">*</span> :</label>
                                        </div>
                                        <div class="col-4">
                                            <input type="date" id="cmpDate" class="form-control" placeholder="Enter Date" maxlength="200" ng-model="cmpDate" ng-required="true">
                                        </div>
                                        <div class="col-3" style="text-align:right"></div>
                                    </div>
    
                                    <div class="row" style="padding-top:4px">
                                        <div class="col-3" style="text-align:right"></div>
                                        <div class="col-2" style="text-align:right">
                                            <label>Camp's to :</label>
                                        </div>
                                        <div class="col-4">
                                            <input type="date" id="cmpDateTo" class="form-control" placeholder="Enter Date" maxlength="200" ng-model="cmpDateTo" >
                                        </div>
                                        <div class="col-3" style="text-align:right"></div>
                                    </div>
    
                                    <div class="row" style="padding-top:4px">
                                        <div class="col-3" style="text-align:right"></div>
                                        <div class="col-2" style="text-align:right">
                                            <label>No of Doners<span class="star">*</span> :</label>
                                        </div>
                                        <div class="col-4">
                                            <input type="text" id="cmpNoDonors" class="form-control" placeholder="No of Doners" maxlength="200" ng-model="cmpNoDonors" ng-required="true">
                                        </div>
                                        <div class="col-3" style="text-align:right"></div>
                                    </div>
                                    <div class="row" style="padding-top:4px">
                                        <div class="col-3" style="text-align:right"></div>
                                        <div class="col-2" style="text-align:right">
                                            <label>Remark<span class="star">*</span> :</label>
                                        </div>
                                        <div class="col-4">
                                            <textarea class="form-control" rows="3" id="cmpRemark" ng-model="cmpRemark" ng-required="true"></textarea>
                                        </div>
                                        <div class="col-3" style="text-align:right"></div>
                                    </div>
                                    <div class="row" style="padding-top:4px">
                                        <div class="col-3" style="text-align:right"></div>
                                        <div class="col-2" style="text-align:right">
                                            <label style="margin-left: -10px;">Upload Photo<span class="star">*</span> :</label>
                                        </div>
                                        <div class="col-4">
                                            <input type="file" class="form-control" ng-model="idp" name="idp" id="idp" multiple='multiple' />
                                            
                                        </div>
                                        <div class="col-md-2" ng-show="showIdpError">
    
                                            <span style="color: red;">{{idpFileGood}}</span>
                                        </div>
                                        <div class="col-md-1">
                                            <span id="linkDWN"></span>
                                        </div>
                                       
                                    </div> <br>
                                    <div class="row" style="padding-top:4px">
                                        <div class="col-3" style="text-align:right"></div>
                                        <div class="col-2" style="text-align:right">
    
                                           
                                        </div>
                                        <div class="col-4">
                                           
                                            <button type="button" ng-hide="campid == '' " class="btn btn-success"  ng-disabled="valid1.$invalid"  ng-click="updateData()" id="update">UPDATE CAMP</button>
                                            <button type="button"ng-show="campid == '' " class="btn btn-success" ng-disabled="valid1.$invalid"  ng-click="addData()" id="add">ADD CAMP</button>
    
                                            <input type="text" id="cmpid" ng-hide="true" class="form-control" placeholder="cmpid" maxlength="200" ng-model="cmpid">
                                        </div>
    
                                        <div class="col-3" style="text-align:right"></div>
                                        <!--<input type="file" name="mypic" required /> <br>
    <button onclick="uploadFile()">Upload File</button>-->
    
    
                                    </div>
                                </div>
                            </form>
                           

                        </div>
                  
                </div>
            </div>
        </div>

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<footer class="main-footer">
   
    <div class="float-right d-none d-sm-inline-block">
        <b>Version</b> 1.0.0-pre
    </div>
</footer>

<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
</aside>
<!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->
<!-- Controller -->
<script> var campid = "<%= campid %>";</script>
<script src="/controller/admin/campUpdate.js"></script>
<!-- AdminLTE App -->
<script src="/AdminLTE/adminlte.js"></script>
<script type="text/javascript" src="/AdminLTE/bootstrap.bundle.min.js"></script>

</body>
</html>