<%- include('common/header.ejs') -%>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"><img src="/img/icon/blood.png" style="width:60px;height:60px;" alt=""> User Login</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Blood Group</li>
                        <li class="breadcrumb-item active">passwordUpdate</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">


        <div class="container-fluid">
            <div class="container-fluid">
                <div class="panel panel-default">
                    <form name="pwd" id="pwd">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">district Details</h3>
                            </div>
                            <div class="card-body">

                                <div class="row" style="padding-top:4px">
                                    <div class="col-3" style="text-align:right"></div>
                                    <div class="col-2" style="text-align:right">
                                        <label>District<span class="star">*</span> :</label>
                                    </div>
                                    <div class="col-4">
                                        <input type="text" id="district1" ng-model="district1" class="form-control" placeholder="district" maxlength="200">
                                    </div>
                                    <div class="col-3" style="text-align:right"></div>
                                </div>

                                <div class="row" style="padding-top:4px">
                                    <div class="col-3" style="text-align:right"></div>
                                    <div class="col-2" style="text-align:right">
                                        <label>E-Mail<span class="star">*</span> :</label>
                                    </div>
                                    <div class="col-4">
                                        <input type="text" id="email" ng-model="email" class="form-control" placeholder="E-Mail ID" maxlength="200">
                                    </div>
                                    <div class="col-3" style="text-align:right"></div>
                                </div>

                                <div class="row" style="padding-top:4px">
                                    <div class="col-3" style="text-align:right"></div>
                                    <div class="col-2" style="text-align:right">
                                        <label>Password<span class="star">*</span> :</label>
                                    </div>
                                    <div class="col-4">
                                        <input type="text" id="password" ng-model="password" class="form-control" placeholder="PASSWORD" maxlength="200">
                                    </div>
                                    <div class="col-3" style="text-align:right"></div>
                                </div>
                                <div class="row" style="padding-top:4px">
                                    <div class="col-3" style="text-align:right"></div>
                                    <div class="col-2" style="text-align:right">
                                        <label> Security Question <span class="star">*</span> :</label>
                                    </div>
                                    <div class="col-4">
                                        <select class="form-control" ng-model="squestion" ng-required="true" id="squestion">
                                            <option value="" disabled selected>--select--</option>
                                            <option value="Who_is_your_favourite_friend">Who is your favourite friend?</option>
                                            <option value="Who_is_your_favourite_person">Who is your favourite person?</option>
                                            <option value="Who_is_your_favourite_god">Who is your favourite god?</option>
                                        </select>
                                    </div>
                                    <div class="col-3" style="text-align:right"></div>
                                </div>
                                <div class="row" style="padding-top:4px">
                                    <div class="col-3" style="text-align:right"></div>
                                    <div class="col-2" style="text-align:right">
                                        <label>Security Answer<span class="star">*</span> :</label>
                                    </div>
                                    <div class="col-4">
                                        <input type="text" ng-model="sanswer" id="sanswer" class="form-control" placeholder="Answer" maxlength="200">
                                    </div>
                                    <div class="col-3" style="text-align:right"></div>
                                </div>

                                <div class="row" style="padding-top:4px">
                                    <div class="col-3" style="text-align:right"></div>
                                    <div class="col-2" style="text-align:right">
                                    </div>
                                    <div class="col-4">
                                        <button type="button" class="btn btn-success" data-dismiss="modal" ng-click="addUser()" id="add">Submit</button>
                                        <input type="hidden" id="userid" name="userid" value="">
                                    </div>
                                    <div class="col-3" style="text-align:right"></div>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<footer class="main-footer">
        <div class="float-right d-none d-sm-inline-block">
        <b>Version</b> 1.0.0-pre
    </div>
</footer>

<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
</aside>
<!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->
<!-- Controller -->
<script src="/controller/admin/addDistricts.js"></script>
<!-- AdminLTE App -->
<script src="/AdminLTE/adminlte.js"></script>
<script type="text/javascript" src="/AdminLTE/bootstrap.bundle.min.js"></script>

</body>
</html>